// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tentan {
  id        String    @id
  name      String
  createdAt DateTime
  updatedAt DateTime?
  deletedAt DateTime?

  users          User[]
  events         Event[]
  products       Product[]
  prices         Price[]
  stocks         Stock[]
  stockMovements StockMovement[]

  @@map("tentans")
}

model User {
  id        String    @id @default(uuid())
  tentanId  String
  email     String    @unique
  firstName String
  lastName  String
  password  String
  createdAt DateTime
  updatedAt DateTime?
  deletedAt DateTime?

  tentan Tentan @relation(fields: [tentanId], references: [id])

  @@map("users")
}

model Event {
  id       String   @id @default(uuid())
  tenantId String   /// @where-requied
  event    String
  date     DateTime
  version  Int
  payload  Json

  tenant Tentan @relation(fields: [tenantId], references: [id])

  @@map("events")
}

model Product {
  id          String    @id @default(uuid())
  tenantId    String
  barcode     String?   @unique
  sku         String?   @unique
  name        String
  description String
  gender      String?
  model       String?
  material    String?
  brand       String?
  weight      Float?
  size        String?
  color       String?
  createdAt   DateTime
  updatedAt   DateTime?
  deletedAt   DateTime?
  inactivedAt DateTime?

  prices Price[]
  stocks Stock[]
  tenant Tentan  @relation(fields: [tenantId], references: [id])

  @@map("products")
}

enum Currency {
  USD
  EUR
  RUB
  BRL
}

model Price {
  id         String   @id @default(uuid())
  tenantId   String
  productId  String
  price      Float
  coastPrice Float
  currency   Currency
  date       DateTime

  product Product @relation(fields: [productId], references: [id])
  tenant  Tentan  @relation(fields: [tenantId], references: [id])

  @@map("prices")
}

enum StockMovementType {
  INPUT
  OUTPUT
}

model StockMovement {
  id       String            @id @default(uuid())
  tenantId String
  quantity Int
  date     DateTime
  type     StockMovementType
  stockId  String
  stock    Stock             @relation(fields: [stockId], references: [id])

  tenant Tentan @relation(fields: [tenantId], references: [id])

  @@map("stock_movements")
}

model Stock {
  id           String    @id @default(uuid())
  tenantId     String
  productId    String    @unique
  productName  String
  quantityType String
  quantity     Int
  createdAt    DateTime
  updatedAt    DateTime?
  deletedAt    DateTime?

  product   Product         @relation(fields: [productId], references: [id])
  movements StockMovement[]
  tenant    Tentan          @relation(fields: [tenantId], references: [id])

  @@map("stocks")
}
